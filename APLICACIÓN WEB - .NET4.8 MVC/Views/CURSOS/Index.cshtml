@model IEnumerable<Colegio_Capitaria.Models.CURSOS>

@{
    ViewBag.Title = "Cursos";
}

<h2>Cursos</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            NOMBRE COLEGIO
        </th>
        <th>
            CURSO
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.COLEGIOS.NOMBRE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DESCRIPCION)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID_CURSO }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.ID_CURSO }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.ID_CURSO })
        </td>
    </tr>
}

</table>
